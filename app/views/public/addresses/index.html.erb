<h4>配送先登録/一覧</h4>
<%= form_with model: @address,local:true do |f| %>
  <div class="field">
    <%= f.label :"郵便番号"%>
    <%= f.text_field :postal_code, placeholder: "0000000",autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"住所"%>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0",autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"宛名" %>
    <%= f.text_field :name, placeholder: "令和道子",autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      <th colspan = "4"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address%></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address) %>
          <%= link_to "削除する", address_path(address), method: :delete %></td>
        </tr>
    <% end %>
  </tbody>
</table>