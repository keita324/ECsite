<h4>商品詳細</h4>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= image_tag @item.get_image(300,300) %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <%= @item.name %>
        <%= @item.introduction%>
        <%= @item.genre.name%>
        ¥ <%= (@item.price_tax_out * 1.1).to_i %>(税込)
        
         <%= form_with model: @cart, local: true do |f| %>
		      <%= f.label :"個数選択" %>
		      <%= f.select :amount, *[1..10] %>
		      <%= f.hidden_field :item_id, :value => @item.id %>
		      <%= f.submit "カートに入れる", class: "btn btn-primary" %>
		    <% end %>
         

        <%#= link_to "編集する", edit_admin_item_path, class: 'btn btn-success' %>
      </div>
    </div>
  </div>