<h4>商品一覧</h4>  
<%= link_to new_admin_item_path do %> 
  商品登録
<% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item) %></td>
        <td><%= item.price_tax_out %></td>
        <td><%= item.genre.name %></td>
        <td><% if item.status == true %>
			 販売中
			<% else %>
			 販売停止中
			<% end %>
	    </td>
      </tr>
    <% end %>
  </tbody>
</table>