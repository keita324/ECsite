<h4>ジャンル編集</h4>

  <% if @genre.errors.any? %>
    <h3><%= @genre.errors.count %>error occurrence</h3><!--エラーメッセ-->
    <ul>
        <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>

<%= form_with model: @genre,url: admin_genre_path, local:true do |f| %>
  <div class="field">
    <%= f.label :"ジャンル名" %>
    <%= f.text_field :name, placeholder: "ジャンル名"%>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
<% end %>