<h4>ジャンル追加・一覧</h4>

  <% if @genre.errors.any? %>
  <h3><%= @genre.errors.count %>error occurrence</h3><!--エラーメッセ-->
  <ul>
      <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
  </ul>
  <% end %>

<%= form_with model: @genre,url: admin_genres_path, local:true do |f| %>
  <div class="field">
    <%= f.label :"ジャンル名" %>
    <%= f.text_field :name, placeholder: "ジャンル名"%>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>